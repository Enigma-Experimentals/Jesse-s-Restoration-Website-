---
interface Props {
  name: string;
  position: string;
  profilePicture: string;
}

const { name, position, profilePicture } = Astro.props;
---

<div class="team-card">
  <img src={profilePicture} alt={`${name}'s profile picture`} width="100" height="100" loading="lazy" />
  <div class="card-content">
    <h3>{name}</h3>
    <p class="position">{position}</p>
    <div class="description">
      <slot />
    </div>
  </div>
</div>

<style>
.team-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1.5rem;
  border: 1px solid #e0e0e0;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  background: white;
  max-width: 280px;
  gap: 1rem;
}

img {
  border-radius: 50%;
  object-fit: cover;
}

.card-content {
  text-align: center;
}

h3 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
}

.position {
  margin: 0.25rem 0 0.75rem;
  color: #666;
  font-size: 0.95rem;
}

.description :global(p) {
  margin: 0 0 1rem;
  color: #444;
  line-height: 1.5;
}

@media (max-width: 768px) {
  .team-card {
    max-width: 100%;
  }
}
</style>